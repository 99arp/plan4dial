{
    "name": "order-pizza",
    "context-variables": {
        "order": {
            "type": "enum",
            "config": [
                "cheese",
                "pepperoni",
                "mushroom",
                "gluten free",
                "hawaiian"
            ]
        },
        "order_available": {
            "type": "flag",
            "config": false
        },
        "location": {
            "type": "json",
            "config": "null"
        },
        "payment_method": {
            "type": "enum",
            "config": [
                "credit",
                "debit",
                "cash"
            ]
        },
        "card_number": {
            "type": "json",
            "config": "null"
        },
        "goal": {
            "type": "flag",
            "config": false
        }
    },
    "intents": {
        "greet": {
            "utterances": [
                "Hey",
                "Hi",
                "hey there"
            ],
            "variables": []
        },
        "leave": {
            "utterances": [
                "Goodbye",
                "Bye",
                "That's all",
                "i'm done"
            ],
            "variables": []
        },
        "confirm": {
            "utterances": [
                true,
                "yeah",
                "that's it",
                "Y",
                "mhm",
                "confirm",
                "yes please"
            ],
            "variables": []
        },
        "deny": {
            "utterances": [
                false,
                "not at all",
                "that's not what i meant",
                "absolutely not",
                "i don't want that",
                "nah",
                "no thanks",
                "no thank you"
            ],
            "variables": []
        },
        "share_order": {
            "utterances": [
                "I want a $order pizza",
                "$order pizza please!",
                "Do you have $order pizza?"
            ],
            "variables": [
                "$order"
            ]
        },
        "share_location": {
            "utterances": [
                "I live in $location.",
                "Do you deliver to $location?",
                "I want my pizza to be delivered to $location."
            ],
            "variables": [
                "$location"
            ]
        },
        "set_payment_method": {
            "utterances": [
                "I want to pay by $payment_method.",
                "Can I pay with $payment_method?",
                "I will pay in $payment_method"
            ],
            "variables": [
                "$payment_method"
            ]
        },
        "pay": {
            "utterances": [
                "My credit card number is $card_number.",
                "This is my account number $card_number",
                "Ok, the number on my card is $card_number."
            ],
            "variables": [
                "$card_number"
            ]
        }
    },
    "actions": {
        "ask-location": {
            "name": "ask-location",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "Where are you located?",
                "Where do you live?",
                "Where would you like to deliver?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "validate-response",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "valid",
                        "updates": {
                            "location": {
                                "variable": "location",
                                "value": "$location",
                                "certainty": "Known"
                            }
                        },
                        "intent": "share_location"
                    },
                    {
                        "name": "unclear",
                        "updates": {
                            "location": {
                                "variable": "location",
                                "value": "$location",
                                "certainty": "Uncertain"
                            }
                        },
                        "follow_up": {
                            "clarify": "clarify__ask-location"
                        }
                    }
                ]
            }
        },
        "ask-order": {
            "name": "ask-order",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "What would you like to order?",
                "What type of pizza would you like?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "validate-response",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "valid",
                        "updates": {
                            "order": {
                                "variable": "order",
                                "value": "$order",
                                "certainty": "Known"
                            }
                        },
                        "intent": "share_order",
                        "follow_up": "check-order-availability"
                    },
                    {
                        "name": "unclear",
                        "updates": {
                            "order": {
                                "variable": "order",
                                "value": "$order",
                                "certainty": "Uncertain"
                            }
                        },
                        "follow_up": {
                            "clarify": "clarify__ask-order"
                        }
                    }
                ]
            }
        },
        "ask-payment": {
            "name": "ask-payment",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "How would you like to pay?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "validate-response",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "valid",
                        "updates": {
                            "payment_method": {
                                "variable": "payment_method",
                                "value": "$payment_method",
                                "certainty": "Known"
                            }
                        },
                        "intent": "set_payment_method"
                    },
                    {
                        "name": "unclear",
                        "updates": {
                            "payment_method": {
                                "variable": "payment_method",
                                "value": "$payment_method",
                                "certainty": "Uncertain"
                            }
                        },
                        "follow_up": {
                            "clarify": "clarify__ask-payment"
                        }
                    }
                ]
            }
        },
        "ask-card-number": {
            "name": "ask-card-number",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "Enter your card number.",
                "Please enter your card details."
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "validate-response",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "valid",
                        "updates": {
                            "card_number": {
                                "variable": "card_number",
                                "value": "$card_number",
                                "certainty": "Known"
                            }
                        },
                        "intent": "pay"
                    },
                    {
                        "name": "unclear",
                        "updates": {
                            "card_number": {
                                "variable": "card_number",
                                "value": "$card_number",
                                "certainty": "Uncertain"
                            }
                        },
                        "follow_up": {
                            "clarify": "clarify__ask-card-number"
                        }
                    }
                ]
            }
        },
        "check-order-availability": {
            "name": "check-order-availability",
            "type": "api",
            "condition": [],
            "effect": {
                "global-outcome-name": "make-call",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "in-stock",
                        "updates": {
                            "order_available": {
                                "variable": "order_available",
                                "value": true
                            }
                        },
                        "status": "success"
                    },
                    {
                        "name": "out-of-stock",
                        "updates": {
                            "order": {
                                "variable": "order",
                                "value": null
                            }
                        },
                        "follow_up": "ask-order",
                        "status": "success"
                    },
                    {
                        "name": "site-down",
                        "status": 404,
                        "response": "site-down-exit"
                    }
                ]
            }
        },
        "place-order": {
            "name": "place-order",
            "type": "api",
            "condition": [],
            "effect": {
                "global-outcome-name": "make-call",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "success",
                        "updates": {
                            "goal": {
                                "variable": "goal",
                                "value": true
                            },
                            "ask-location": {
                                "variable": "ask-location",
                                "value": null
                            },
                            "ask-order": {
                                "variable": "ask-order",
                                "value": null
                            },
                            "ask-payment": {
                                "variable": "ask-payment",
                                "value": null
                            },
                            "ask-card-number": {
                                "variable": "ask-card-number",
                                "value": null
                            },
                            "check-order-availability": {
                                "variable": "check-order-availability",
                                "value": null
                            }
                        },
                        "status": "success",
                        "response": "Order was successfully placed!"
                    },
                    {
                        "name": "site-down",
                        "status": 404,
                        "response": "site-down-exit"
                    }
                ]
            }
        },
        "clarify__ask-location": {
            "name": "clarify__ask-location",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "Are you located in $location?",
                "Do you live in $location?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "yes-no",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "confirm",
                        "updates": {
                            "location": {
                                "variable": "location",
                                "value": "$location",
                                "certainty": "Known"
                            }
                        },
                        "intent": "confirm"
                    },
                    {
                        "name": "deny",
                        "updates": {
                            "entity": {
                                "variable": "entity",
                                "value": null
                            }
                        },
                        "intent": "deny"
                    }
                ]
            }
        },
        "clarify__ask-order": {
            "name": "clarify__ask-order",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "Would you like to order $order?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "yes-no",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "confirm",
                        "updates": {
                            "order": {
                                "variable": "order",
                                "value": "$order",
                                "certainty": "Known"
                            }
                        },
                        "intent": "confirm"
                    },
                    {
                        "name": "deny",
                        "updates": {
                            "entity": {
                                "variable": "entity",
                                "value": null
                            }
                        },
                        "intent": "deny"
                    }
                ]
            }
        },
        "clarify__ask-payment": {
            "name": "clarify__ask-payment",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "Would you like to pay with $payment_method?"
            ],
            "condition": [],
            "effect": {
                "global-outcome-name": "yes-no",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "confirm",
                        "updates": {
                            "payment_method": {
                                "variable": "payment_method",
                                "value": "$payment_method",
                                "certainty": "Known"
                            }
                        },
                        "intent": "confirm"
                    },
                    {
                        "name": "deny",
                        "updates": {
                            "entity": {
                                "variable": "entity",
                                "value": null
                            }
                        },
                        "intent": "deny"
                    }
                ]
            }
        }
    }
}